<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.my.asadullah.tokobukudahlan.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cover_buku"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nama_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Judul Buku"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tgl_terbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Tanggal terbit : "
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/harga_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Harga : "
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pengarang_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Pengarang : "
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/desk_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Deskripisi : "
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
